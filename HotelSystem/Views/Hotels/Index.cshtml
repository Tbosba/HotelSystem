@model IEnumerable<HotelSystem.Models.Hotels>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Hotels</h2>

<a class="btn btn-default" href="@Url.Action("Create","Hotels")">
    <i class="fa fa-plus"></i>
    Add Hotel
</a>
<table class="table table-hover table-striped table-responsive" id="my_list">
    <thead>
        <tr class="table-header-row">
            <th>
                @Html.DisplayNameFor(model => model.ManagerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.NoOfFloors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalNumberOfRooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelPic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ManagerEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfFloors)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalNumberOfRooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelDescription)
                </td>
                <td>
                    <a><img src="data:image/png;base64,@Convert.ToBase64String(item.HotelPic, 0, item.HotelPic.Length)" style="width: 40px; height: 40px" alt="" /></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.HotelId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.HotelId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.HotelId })
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $('#my_list').dataTable(
        {
            dom: 'Bfrtip',
            lengthMenu: [
                [10, 25, 50, -1],
                ['10 rows', '25 rows', '50 rows', 'Show all']
            ],
            buttons: [
                'pageLength', 'csv', 'pdf', 'print'
            ],
            language: { search: "" },
            select: true
        }
    );
    $(".dataTables_filter input").addClass("search-input");
    $(".dataTables_filter input").attr('placeholder', 'Search');
    $('#my_list')
        .removeClass('display')
        .addClass('table table-striped table-hover');</script>
