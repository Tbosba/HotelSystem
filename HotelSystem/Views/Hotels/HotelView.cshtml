@model IEnumerable<HotelSystem.Models.Hotels>

@{
    ViewBag.Title = "HotelView";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 100% !important;
        margin: auto;
        text-align: center;
        /*            height: 250px !important;*/
        margin-bottom: 20px !important;
        border: groove !important;
    }

        .card:hover {
            border-radius: 10px;
            border-color: aqua !important;
        }
</style>

<section class="dashboard section">
    <!-- Container Start -->
    <div class="container">
        <!-- Row Start -->
        <div class="col-md-10 offset-md-1 col-lg-12 offset-lg-0">
            <div class="col-lg-12">
                <div class="heading text-center pb-5">
                    <h2 class="font-weight-bold"> Available Hotels </h2>
                </div>
            </div>
            <div class="col-lg-12">
                @if (Model.Count() == 0)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="alert alert-warning">
                                <b>Note :</b> No hotels available at the moment.
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <div class="col-md-8 offset-md-1 col-lg-8 offset-lg-0">
                            <div class="col-lg-8 col-md-10">
                                <div class="card">

                                    <img class="card-img-top" src="data:image/png;base64,@Convert.ToBase64String(item.HotelPic, 0, item.HotelPic.Length)" style="width: 50%; height: 15 0px" alt="" align="left">

                                    <div class="card-body" @*align="center"*@>
                                        <h4 class="card-title"> <strong> @Html.DisplayFor(x => item.HotelName)</strong> </h4>
                                        <p class="card-text">Number of floors :@Html.DisplayFor(modelItem => item.NoOfFloors)</p>
                                        <p class="card-text">Hotel Address :@Html.DisplayFor(modelItem => item.Address)</p>
                                        <p class="card-text">Hotel Description :@Html.DisplayFor(modelItem => item.HotelDescription)</p>
                                        <br />
                                        <p><a class="btn btn-outline-primary" style="background-color:silver" onclick="location.href='@Url.Action("RoomBooking1", "Rooms", new { id = item.HotelId })'">View Hotel Rooms </a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            </div>
        </div>
    </section>
