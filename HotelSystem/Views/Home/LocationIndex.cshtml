                                    <div class="card">
                                        <div class="thumb-content">
                                            <a href="/rooms/roombooking1/@hotel.HotelId">
                                                <img class="card-img-top img-fluid" style="width: 100%; height: 300px" src="data:image/png;base64,@Convert.ToBase64String(hotel.HotelPic, 0, hotel.HotelPic.Length)" style="height:240px" href="/rooms/roombooking1/@hotel.HotelId" alt="Card image cap">
                                            </a>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-title"><a href="/rooms/roombooking1/@hotel.HotelId">@hotel.HotelName</a></h4>
                                            <ul class="list-inline product-meta">
                                                <li class="list-inline-item">
                                                    <a href="/rooms/roombooking1/@hotel.HotelId"><i class="fa fa-location-arrow"></i>@hotel.Address</a>
                                                </li>
                                                <li class="list-inline-item">
                                                    <a href="/rooms/roombooking1/@hotel.HotelId"><i class="fa fa-bed"></i>@hotel.TotalNumberOfRooms</a>
                                                </li>
                                            </ul>
                                            <p class="card-text">@hotel.HotelDescription</p>
