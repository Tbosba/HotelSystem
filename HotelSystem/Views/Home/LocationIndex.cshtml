                <div class="trending-ads-slide">
                    @if (hotels.Count() == 0)
                    {
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="alert alert-warning">
                                    <b>Note :</b> No hotel available at the moment.
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        foreach (var hotel in hotels)
                        {
                            <div class="col-sm-12 col-lg-4">
