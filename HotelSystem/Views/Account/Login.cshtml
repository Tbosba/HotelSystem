@using HotelSystem.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <section class="login py-5 border-top-1">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-8 align-item-center">
                    <div class="border">
                        <h3 class="bg-gray p-4">Login Now</h3>
                        <form action="#">
                            <fieldset class="p-4">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email address" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Valid password" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                                @*<input type="text" placeholder="Username" class="border p-3 w-100 my-2">*@
                                @*<input type="password" placeholder="Password" class="border p-3 w-100 my-2">*@
                                <div class="form-group">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.Label("Keep me logged in")
                                    @*<input type="checkbox" id="keep-me-logged-in">*@
                                    @*<label for="keep-me-logged-in" class="pt-3 pb-2">Keep me logged in</label>*@
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Sign In" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3" />
                                </div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <a class="mt-3 d-block  text-primary" href="#">Forget Password?</a>
                                        @*@Html.ActionLink("Register Now", "Register", new { @class= "mt-3 d-inline-block text-primary" })*@
                                        @*<a class="mt-3 d-inline-block text-primary" href="register.html">Register Now</a>*@
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <a class="mt-3 d-inline-block text-primary" href="~/Account/Register">Register Now</a>
                                        @*<input type="submit" value="Sign In" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3" />*@
                                    </div>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

}